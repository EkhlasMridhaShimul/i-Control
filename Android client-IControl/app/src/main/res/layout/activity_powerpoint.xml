<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:background="@drawable/pointback"
    tools:context=".PowerPoint.Powerpoint">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/leftpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/leftpoint"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorDarkRed" />

            <Button
                android:id="@+id/playbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:textAllCaps="true"
                android:textColor="@color/colorRed"
                android:text="Play"
                android:backgroundTint="@color/colorWhite" />

            <Button
                android:id="@+id/rightpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/rightpoint"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorDarkRed"/>
        </LinearLayout>
        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorDarkRed"/>
    </LinearLayout>



</LinearLayout>