<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:background="@drawable/tooltop"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_gravity="bottom"
        android:background="@drawable/toolsback">

        <Button
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@color/colorBlack"
            android:drawableTop="@drawable/monitor"
            android:text="Desktop"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@color/colorBlack"
            android:drawableTop="@drawable/music"
            android:text="Music \n Player"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button3"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@color/colorBlack"
            android:drawableTop="@drawable/poweroff"
            android:text="Power"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@color/colorBlack"
            android:drawableTop="@drawable/powerpoint"
            android:text="Power\nPoint"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </GridLayout>



</FrameLayout>